---
import { cn } from "@/utils/cn";

export interface Props {
  id?: string;
  href: string;
  class?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
}

const {
  id,
  href,
  class: className = "",
  ariaLabel,
  title,
  disabled = false,
} = Astro.props;

// 외부 링크인지 확인 (http/https로 시작하거나 mailto로 시작하는 경우)
const isExternalLink =
  href && (href.startsWith("http") || href.startsWith("mailto"));
---

{
  disabled ? (
    <span
      id={id}
      class={cn("group inline-block", className)}
      title={title}
      aria-disabled={disabled}
    >
      <slot />
    </span>
  ) : (
    <a
      id={id}
      {href}
      class={cn("group inline-block hover:text-accent", className)}
      aria-label={ariaLabel}
      title={title}
      target={isExternalLink ? "_blank" : undefined}
      rel={isExternalLink ? "noopener noreferrer" : undefined}
    >
      <slot />
    </a>
  )
}
